        android:text="Azis"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1234567"
        android:textSize="13sp"/>
</LinearLayout>